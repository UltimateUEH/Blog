@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@{
    var check = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}

@if (check.Succeeded)
{
    <a class="dropdown-toggle-custom" asp-area="Admin" asp-controller="Admin" asp-action="Index" class="ms-5"><i class="fa-solid fa-bars-progress me-2"></i>Quản trị</a>
}