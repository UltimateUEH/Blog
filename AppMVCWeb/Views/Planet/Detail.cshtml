@model AppMVCWeb.Models.PlanetModel

<h1>@Model.Name</h1>

<div class="card w-100">
    <img class="card-img-top" src="~/planet/@(Model.Name).jpg" alt="@Model.Name" />
    <div class="card-body">
        <h5>@Model.VnName</h5>
        <div class="card-text">
            @Model.Content
        </div>
    </div>
    <a class="card-link" asp-action="Index">Các hành tinh</a>
</div>
