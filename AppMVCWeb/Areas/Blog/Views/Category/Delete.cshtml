@using AppMVCWeb.Menu
@inject AdminSidebarService AdminSidebarService
@model App.Models.Blog.Category

@{
    ViewData["Title"] = "Xóa chuyên mục bài viết";
    Layout = "_LayoutAdmin";
}

<h3>Có chắc chắn xóa chuyên mục?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>

@{
    AdminSidebarService.SetActive("Category", "Delete", "Blog");
}

@section AdminSidebar
{
    @Html.Raw(AdminSidebarService.RenderHtml())
}