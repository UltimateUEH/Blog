@using AppMVCWeb.Menu
@inject AdminSidebarService AdminSidebarService
@model IEnumerable<App.Models.Blog.Category>

@{
    ViewData["Title"] = "Danh sách các chuyên mục bài viết";
    Layout = "_LayoutAdmin";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo chuyên mục</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
       
            <th></th>
        </tr>
    </thead>
    <tbody>

    @if (Model.Count() > 0)
        @await Component.InvokeAsync("RowTreeCategory", new { categories = Model, level = 0})
    </tbody>
</table>

@{
    AdminSidebarService.SetActive("Category", "Index", "Blog");
}

@section AdminSidebar
{
    @Html.Raw(AdminSidebarService.RenderHtml())
}


